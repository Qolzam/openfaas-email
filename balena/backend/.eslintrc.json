{
    "extends": ["eslint:recommended"],
    "ecmaFeatures": {
        "modules": true,
        "spread" : true,
        "restParams" : true

    },
    "env" : {
        "node" : true,
        "es6": true,
        "jest": true
    },
    "rules" : {
        "no-unused-vars" : 2,
        "no-undef" : 2
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2018
    }
}